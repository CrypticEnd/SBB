<form class="{{cssClass}}" autocomplete="off">
    <img class="backgroundOverlay">

    <div class="sheet-header">
        <img src="{{actor.img}}" data-edit="img" title="{{actor.name}}"/>

        <div class="character-info">
            <h1><input name="name" type="text" value="{{actor.name}}" placeholder="{{localize "SBB.common.name"}}"/></h1>

            <div class="xpbar">
                <label for="system.XP">{{localize "SBB.common.xp_long"}}:</label>
                <input class="xp-input" name="system.XP" type="number" value="{{actor.system.XP}}"/>
            </div>
        </div>

    </div>

    <nav class="sheet-navigation main-tabs" data-group="primary">
        <h1>
            <a class="item" data-tab="main">Main</a> |
            <a class="item" data-tab="bag">Bag</a> |
            <a class="item" data-tab="bio">Bio</a> |
            <a class="item"  data-tab="data">
                <i class="fa fa-gear"></i>
            </a>
        </h1>
    </nav>

    <section class="sheet-body">
        <div class="tab" data-group="primary" data-tab="main">
            <div class="sheet-main">
                {{> "systems/sbb/templates/sheets/partials/tenets-box.hbs"}}
                {{> "systems/sbb/templates/sheets/partials/health-box.hbs" this}}
                {{> "systems/sbb/templates/sheets/partials/feat-box.hbs"}}
                {{> "systems/sbb/templates/sheets/partials/skill-box.hbs"}}
                {{> "systems/sbb/templates/sheets/partials/attackAndAmmo-box.hbs"}}
            </div>
        </div>

        <div class="tab" data-group="primary" data-tab="bag">
            <div class="sheet-bag">
            test bag
            </div>
        </div>

        <div class="tab" data-group="primary" data-tab="bio">
            <div class="sheet-bio">
            test bio
            </div>
        </div>

        <div class="tab" data-group="primary" data-tab="data">
            <div class="sheet-data">
                {{> "systems/sbb/templates/sheets/partials/character-attributes.hbs"}}

            </div>
        </div>

    </section>
</form>