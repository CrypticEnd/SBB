<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
        <h1><input name="name" type="text" value="{{item.name}}" placeholder="{{ localize 'Name' }}"/></h1>
    </header>
    <div class="sheet-content">
        <table class="armour-stats">
            <tr>
                {{#each config.armourHeaders}}
                    <th>{{localize this}}</th>
                {{/each}}
            </tr>
            <tr>
                <td>
                    <select name="system.type">
                        {{#select item.system.type}}
                            {{#each config.armourTypes as |name type|}}
                                <option value="{{name}}">{{localize name}}</option>
                            {{/each}}
                        {{/select}}
                    </select>
                </td>
                <td>
                    <input name="system.kinetic" type="number" value="{{item.system.kinetic}}"/>
                </td>
                <td>
                    <input name="system.energy" type="number" value="{{item.system.energy}}"/>
                </td>
                <td>
                    <input name="system.explosive" type="number" value="{{item.system.explosive}}"/>
                </td>
                <td>
                    <input name="system.weight" type="number" value="{{item.system.weight}}"/>
                </td>
                <td>
                    <input name="system.techLevel" type="number" value="{{item.system.techLevel}}"/>
                </td>
            </tr>
        </table>

        {{editor item.system.description target="system.description" button=true owner=owner editable=editable}}
    </div>


</form>