<form class="{{cssClass}}" autocomplete="off">

    <div class="sheet-header">
        <img src="{{actor.img}}" data-edit="img" title="{{actor.name}}"/>

        <div class="character-info">
            <h1><input name="name" type="text" value="{{actor.name}}" placeholder="{{localize "SBB.common.name"}}"/></h1>

            <div class="xpbar">
                <label for="system.XP">{{localize "SBB.common.xp_long"}}:</label>
                <input name="system.XP" type="number" value="{{actor.system.XP}}"/>
            </div>
        </div>

    </div>

    <nav class="sheet-navigation tabs" data-group="primary">
        <a class="item" data-tab="main">Main</a> |
        <a class="item" data-tab="skills">Skills</a> |
        <a class="item" data-tab="bag">Bag</a> |
        <a class="item" data-tab="bio">Bio</a> |
        <a class="item" data-tab="data">
            <img src="systems/sbb/assets/svg/cogwhell.svg" id="cogwhell"/>
        </a>
    </nav>

    <section class="sheet-body">
        <div class="tab main" data-group="primary" data-tab="main">
            test main
        </div>
        <div class="tab skill" data-group="primary" data-tab="skills">
            test skills
        </div>

        <div class="tab bag" data-group="primary" data-tab="bag">
            test bag
        </div>

        <div class="tab bio" data-group="primary" data-tab="bio">
            test bio
        </div>

        <div class="tab bio" data-group="primary" data-tab="data">
            test data
        </div>

    </section>
</form>