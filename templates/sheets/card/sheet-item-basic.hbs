<li class="item flexrow equipment" data-item-id="{{this._id}}">
    <div class="item-title rollable">
        <div class="item-icon item-rollable" data-item-id="{{this._id}}"
        style="background-image: url('{{this.img}}')"></div>
        <h4><a class="toggle-description">{{name}}</a></h4>
    </div>


    {{#if (eq type "Weapon")}}
        <input class="inline-edit item-detail" type="number"
               data-field="system.magazine.value" value="{{this.system.magazine.value}}"
               min="0", max="{{system.magazine.max}}"/>

        <div class="item-detail">{{system.magazine.max}}</div>

    {{/if}}

    {{#if (eq type "Consumable")}}
        <input class="inline-edit item-detail" type="number"
               data-field="system.quantity" value="{{this.system.quantity}}"
               min="0"/>

        <div class="item-detail">{{#multiply system.weight system.quantity}}{{/multiply}}</div>
    {{/if}}

    {{#if (eq type "Armour")}}
        <div data-item-id="{{this._id}}" class="item-detail armour-equipped-button
            {{#if system.equipped}}
                ">{{localize "SBB.common.true"}}
            {{else}}
                inactive">{{localize "SBB.common.false"}}
            {{/if}}
        </div>

        <div class="item-detail">{{system.weight}}</div>
    {{/if}}

    {{#if (eq type "Item")}}
        <input class="inline-edit item-detail" type="number"
               data-field="system.quantity" value="{{this.system.quantity}}"
               min="0"/>

        <div class="item-detail">{{#multiply system.weight system.quantity}}{{/multiply}}</div>
    {{/if}}



    <div class="item-detail-space">
        <i class="fa fa-pen-to-square" data-item-id="{{this._id}}"></i>
    </div>

    <div class="item-summary hide-on-click {{#unless (eq flags.sbb.shown true)}}hidden{{/unless}}">
        <div class="item-properties">
            {{#if (eq type "Weapon")}}
                <span class="tag">{{localize "SBB.weaponHeaders.damageType"}}
                : {{localize system.damageType}}</span>

                <span class="tag">{{localize "SBB.weaponHeaders.damage"}}
                    : {{localize system.formula}}</span>

                <span class="tag">{{localize "SBB.weaponHeaders.handsRequired"}}
                    : {{system.handsRequired}}</span>

                <span class="tag">{{localize "SBB.weaponHeaders.harmRange_short"}}
                    : {{system.harmRange}}</span>

                <span class="tag">{{localize "SBB.weaponHeaders.rof"}}
                    : {{system.rof}}</span>

                <span class="tag">{{localize "SBB.weaponHeaders.techLevel"}}
                    : {{system.techLevel}}</span>
            {{/if}}

            {{#if (eq type "Armour")}}
                <span class="tag">{{localize system.type}}</span>

                <span class="tag">{{localize "SBB.damageTypes.kinetic"}}
                    : {{system.kinetic}}</span>

                <span class="tag">{{localize "SBB.damageTypes.energy"}}
                    : {{system.energy}}</span>

                <span class="tag">{{localize "SBB.damageTypes.explosive"}}
                    : {{system.explosive}}</span>

                <span class="tag">{{localize "SBB.armour.techLevel"}}
                    : {{system.techLevel}}</span>
            {{/if}}
        </div>

        {{editor system.description target="system.description" button=false owner=owner editable=false}}
    </div>

</li>